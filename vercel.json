{
  "version": 2,
  "builds": [
      {
          "src": "src/main.ts",
          "use": "@vercel/node"
      }
  ],
  "routes": [
      {
          "src": "/(.*)",
          "dest": "src/main.ts",
          "methods": [
              "GET",
              "POST",
              "PUT",
              "DELETE",
              "OPTIONS", 
              "PATCH"
                     ],
            "headers": {
                         "Access-Control-Allow-Origin": "http://localhost:5173,https://beatbox-blond.vercel.app,https://orangered-ape-514605.hostingersite.com",
                         "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS, PATCH",
                         "Access-Control-Allow-Headers": "Content-Type, Authorization, Content-Disposition",
                         "Access-Control-Allow-Credentials": "true"
                        }
                }
        ]
}